<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/quantity_tv"
        android:layout_width="@dimen/widget_ingredient_quantity_width"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:paddingRight="@dimen/widget_ingredient_item_padding_right"
        android:paddingEnd="@dimen/widget_ingredient_item_padding_right"
        tools:text="600"/>

    <TextView
        android:id="@+id/measure_tv"
        android:layout_width="@dimen/widget_ingredient_measure_width"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/widget_ingredient_item_padding_right"
        android:paddingEnd="@dimen/widget_ingredient_item_padding_right"
        tools:text="TBLSP"/>

    <TextView
        android:id="@+id/ingredient_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="Unbleached Flour"/>

</LinearLayout>